TempFriends.put(1, '2aT- EP 24');
TempFriends.put(2, '3aT- EP 25');
TempFriends.put(3, '4aT- EP 24');

TempFriends.put(4, '5aT- EP 24');
TempFriends.put(5, '6aT- EP 25');
TempFriends.put(6, '7aT- EP 24');
TempFriends.put(7, '8aT- EP 24');
TempFriends.put(8, '9aT- EP 24');
TempFriends.put(9, '10aT- EP 18');
